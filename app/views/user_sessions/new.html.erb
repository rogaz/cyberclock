<%= provide(:title, 'Inicie sesión') %>

<%= form_for @user_session, url: user_session_path, html: {id: 'form-signin',class:'form-signin', role: 'form'} do |f| %>
    <h2 class="form-signin-heading"><i class="fa fa-lock"></i> Inicie sesión</h2>

      <%= f.text_field :login, class: 'form-control', placeholder: 'Login' %>
      <%= f.password_field :password, class: 'form-control', placeholder: 'Contraseña' %>
      <%= f.label :remember_me do %>
          <%= f.check_box :remember_me %> Recordar mis datos
      <% end %>
      <%= f.submit 'Entrar', class: 'btn btn-lg btn-primary btn-block' %>
<% end %>
