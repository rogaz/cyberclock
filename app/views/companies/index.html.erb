<%= provide(:title, 'Empresas') %>

<div id="index-head">
  <h1 id="title">Empresas</h1>
  <%= link_to '<i class="fa fa-plus"></i> Crear empresa'.html_safe, new_company_path, class: 'btn btn-success', id: 'new_company' %>
</div>

<div class="row">
  <% @companies.each do |company| %>
      <div class="col-6 col-sm-6 col-lg-4 company-container">
        <h2><i class="fa fa-bookmark"></i> <%= company.name %></h2>
        <% company.branches.order(:created_at).each do |branch| %>
            <div class="branch-item"><%= link_to "<i class='fa fa-building-o'></i> #{branch.name}".html_safe, branch %></div>
        <% end %>
        <div class="branch-item"><%= link_to "<i class='fa fa-plus'></i> Crear sucursal".html_safe, new_branch_path(:company_id => company.id) %></div>
