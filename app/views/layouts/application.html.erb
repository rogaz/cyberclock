  </div>
  -->

</div> <!-- /container -->

<%= javascript_include_tag 'application', "#{params[:controller]}", 'data-turbolinks-track' => true %>
<%= yield :asset_javascript %>
<script>
    //Focus link in navbar
    $(document).ready(function(){ $('.<%= params[:controller] %>-nav-bar').addClass('active'); });
</script>
</body>
</html>
